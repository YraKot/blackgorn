.head
	h1
		color: #443b39;
		font-family: "PT sans", sans-serif;
		font-weight: 600;
		font-size: 30px;
		text-transform: uppercas;
		margin-bottom: 10px;
	p
		font-size: 18px;
		color: black;
		line-height: 28px;
.grid
	display: flex;
	flex-flow: column wrap
	max-height: 250vh

	.cell
		margin: 0 25px 30px 0;
		width: 32%
		height: 100%
		.post_img
			img 
				width: 100%;
				margin: 0
				padding: 0
				box-sizing: border-box
		.post_text
			margin-top: -3px;
			padding 25px 30px 25px 30px
			background-color rgba(68, 59, 57, 1)
			font-family: 'PT Sans', sans-serif;
			color white
			p 
				font-size 10px
				text-transform uppercase
				margin-bottom 10px
			h3 
				margin-bottom 10px
				font-size 18px
				a 
					text-decoration: none
					color white
