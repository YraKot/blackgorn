footer
	border 1px solid red
	background-color: rgba(68, 59, 57, 1);
	width 100%

	.footer_top_wrap
		border 1px solid red
		// width 100%
		text-align center
		padding-top 130px
		padding-bottom 118px

		.footer_logo
		.footer_social
			.social_icon
				padding-top 40px
				a 
					text-decoration: none;
					width: 38px;
					height: 38px;
					padding: 12px;
					border: 1px solid red
					svg 	
						height 13px
						width 13px
						use 
							transform translate(0, 0) scale(1, 1)

				:hover
					background: white;
					svg 
						path
							fill: black;

	.footer_bottom_wrap
		// border 1px solid red
		display flex
		justify-content center
		padding-top 15px
		padding-bottom 15px
		.footer_copyright
			p 
				margin 0
				letter-spacing 0.5px
				text-align center
				color: white;
				font-family: 'Roboto Condensed', sans-serif;
				font-size: 16px;
				line-height: 18px;
				font-style: normal;
				font-weight: 100;
