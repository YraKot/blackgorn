#site-content
	background: white
.gallery_grid
	// border 1px solid red
	width 100%
	display flex
	flex-direction row
	flex-wrap wrap
	// box-sizing: border-box;
	.block
		// border 1px solid green 
		width 49%
		margin 10px 0
		.block_header
			// border 1px solid blue
			padding: 5px 0
		.block_img
			// border 1px solid purple 
			display: flex
			justify-content: space-between
			flex-wrap: wrap
			a  
				display: inline-block;
				margin-bottom: 10px;
				width: calc(25% - 10px);
				img 
					width: 130px;
	.block:nth-child(odd)
		// border 1px solid red
		margin-right: 1%
	.block:nth-child(even)
		// border 1px solid blue
		margin-left: 1%

